<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <!--TomCat считывает содержимое web.xml и здесь нам нужно описать то, что мы хотим что бы сервер делал-->
    <!--(Например что бы сервер все http - запросы от пользователей перенаправлял на dispatcher-servlet)-->
    <display-name>spring-mvc-app1</display-name>

    <absolute-ordering/>

    <servlet> <!-- Создаём наш DispatcherServlet -->
        <servlet-name>dispatcher</servlet-name> <!-- Имя нашего сервлета -->
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> <!-- Класс который используется для создания сервлета -->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/applicationContextMVC.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup> <!-- Указывает что нужно загружать DispatcherServlet в первую очередь в наш сервер -->
    </servlet>

    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern> <!-- Любой url который вводит пользователь перенаправляется на наш сервлет -->
    </servlet-mapping>

</web-app>
